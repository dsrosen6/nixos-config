{
    "layer": "top",
    "position": "top",
    "margin-left": 8,
    "margin-right": 8,
    "reload_style_on_change": true,
    "modules-left": [
        "hyprland/workspaces",
        "hyprland/submap",
        "mpris"
    ],
    "modules-center": [
        "clock"
    ],
    "modules-right": [
        "cpu",
        "memory",
        "pulseaudio",
        "battery",
        "network"
    ],
    "hyprland/workspaces": {
        "disable-scroll": true,
        "show-special": true,
        "all-outputs": true,
        "warp-on-scroll": false,
        "format": "{name}"
    },
    "hyprland/submap": {
        "format": "[{}]"
    },
    "mpris": {
        "player": "spotify",
        "interval": 1,
        "title-len": 30,
        "format": "{status_icon} {artist} - {title} [{position}/{length}]",
        "status-icons": {
            "playing": "",
            "paused": ""
        }
    },
    "cpu": {
        "interval": 10,
        "format": " {}%",
        "on-click": "ghostty -e btop"
    },
    "memory": {
        "interval": 30,
        "format": " {used:0.1f}/{total:0.1f}",
        "on-click": "ghostty -e btop"
    },
    "pulseaudio": {
        "format": "{icon} {volume}%",
        "format-muted": "",
        "format-icons": {
            "default": [
                ""
            ]
        },
        "on-click": "pavucontrol"
    },
    "battery": {
        "states": {
            "normal": 100,
            "warning": 20,
            "critical": 10
        },
        "format": "{icon} {capacity}%",
        "format-alt": "{icon}",
        "format-icons": {
            "default": [
                "󰂎",
                "󰁺",
                "󰁻",
                "󰁼",
                "󰁽",
                "󰁾",
                "󰁿",
                "󰂀",
                "󰂁",
                "󰂁",
                "󰁹"
            ],
            "charging": [
                "󰢟",
                "󰢜",
                "󰂆",
                "󰂇",
                "󰂈",
                "󰢝",
                "󰂉",
                "󰢞",
                "󰂊",
                "󰂋",
                "󰂅"
            ],
            "plugged": [
                ""
            ],
            "full": [
                "󰁹"
            ]
        }
    },
    "network": {
        "format-wifi": "󰖩 {essid}",
        "format-ethernet": "",
        "tooltip-format": "{ifname} via {gwaddr}",
        "format-disconnected": "󰖪"
    },
    "clock": {
        "format": "{:%I:%M}",
        "format-alt": "{:%d // %I:%M}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
    }
}
