{
    "layer": "top",
    "position": "top",
    "modules-left": [
        "hyprland/workspaces",
        "mpris",
        "hyprland/submap"
    ],
    "modules-center": [
        "clock"
    ],
    "modules-right": [
        "group/hardware",
        "pulseaudio",
        "battery",
        "network"
    ],
    "hyprland/workspaces": {
        "disable-scroll": true,
        "show-special": true,
        "all-outputs": true,
        "warp-on-scroll": false,
        "format": "{name}"
    },
    "hyprland/submap": {
        "format": "SUBMAP: {}"
    },
    "mpris": {
        "player": "spotify",
        "interval": 1,
        "title-len": 30,
        "format": "{status_icon} {artist} - {title} [{position}/{length}]",
        "status-icons": {
            "playing": "",
            "paused": ""
        }
    },
    "clock": {
        "format": "{:%d // %I:%M}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format-alt": "{:%I:%M}"
    },
    "group/hardware": {
        "orientation": "horizontal",
        "drawer": {
            "transition-duration": 350,
            "transition-left-to-right": false,
            "click-to-reveal": true,
            "children-class": "hardware-children"
        },
        "modules": [
            "custom/drawericon",
            "cpu",
            "memory"
        ]
    },
    "custom/drawericon": {
        "format": ""
    },
    "cpu": {
        "interval": 10,
        "format": "  {}%",
        "on-click": "ghostty -e btop"
    },
    "memory": {
        "interval": 30,
        "format": "  {used:0.1f}/{total:0.1f}",
        "on-click": "ghostty -e btop"
    },
    "pulseaudio": {
        "format": "{icon} {volume}%",
        "format-muted": "",
        "format-icons": {
            "default": [
                ""
            ]
        },
        "on-click": "pavucontrol"
    },
    "battery": {
        "states": {
            "normal": 100,
            "warning": 20,
            "critical": 10
        },
        "format": "{icon} {capacity}%",
        "format-alt": "{icon}",
        "format-icons": {
            "default": [
                "󰂎",
                "󰁺",
                "󰁻",
                "󰁼",
                "󰁽",
                "󰁾",
                "󰁿",
                "󰂀",
                "󰂁",
                "󰂁",
                "󰁹"
            ],
            "charging": [
                "󰢟",
                "󰢜",
                "󰂆",
                "󰂇",
                "󰂈",
                "󰢝",
                "󰂉",
                "󰢞",
                "󰂊",
                "󰂋",
                "󰂅"
            ],
            "plugged": [
                ""
            ],
            "full": [
                "󰁹"
            ]
        }
    },
    "network": {
        "format-wifi": "󰖩 {essid}",
        "format-ethernet": " ",
        "tooltip-format": "{ifname} via {gwaddr}",
        "format-disconnected": "󰖪"
    }
}
